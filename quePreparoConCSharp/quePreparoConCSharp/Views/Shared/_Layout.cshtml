<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Que Preparo</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
@* EL BODY ARRANCA METIENDO UNA IMAGEN DE FONDO *@
<body background="~/misImagenes/elmejorfondo_opt.jpg">
    @*ACA ARRANCA EL NAVBAR*@
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Que Preparo", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            @*ACA VAN LOS VIEWS Y CONTROLES QUE VA A USAR EL NAVBAR PARA HACERME NAVEGAR*@
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Mi Heladera", "MiHeladera", "Home")</li>
                    <li>@Html.ActionLink("Enchulame la Cocina", "EnchulameLaCocina", "Home")</li>
                    <li>@Html.ActionLink("Mejor Salgo", "mejorsalgo", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
       
        <footer>

        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
